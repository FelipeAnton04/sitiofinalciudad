<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una Entrevista</h4>
            <form action="/admin/entrevistas/agregar" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Jugador" name="jugador">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="pregunta" placeholder="Pregunta"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="respuesta" type="text" placeholder="Respuesta" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
                <p style="color:red;">{{message}}</p>
            {{/if}}    
        </div>
    </div>
</div>