<div class="container" style="margin: 200px auto;">
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{usuarios}}!
                <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar Sesion <i
                        class="fa fa-sign-out"></i></a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-7" style="margin-top: 9px;">
            <h3>Entrevistas</h3>
        </div>
        <div class="col-5 text-right">
            <a href="/admin/entrevistas/agregar" class="btn btn-success"> <i class="fas fa-plus"></i>Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Jugador</th>
                        <th scope="col">Pregunta</th>
                        <th scope="col" class="text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each entrevistas}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{jugador}}</td>
                        <td>{{pregunta}}</td>
                        <td class="text-right">
                            <a href=" " class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a><a href="/admin/entrevistas/eliminar/{{id}}"
                                class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>