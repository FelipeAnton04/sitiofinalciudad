<div class="container">
    <div class="row" style="margin: 150px 0;">
        <div class="col">
            <form action="/admin/login" method="post">
                <div class="row g-3 align-items-center form-group" style="margin: 15px 0;">
                    <div class="col-auto">
                        <label for="usuarios" class="col-form-label" >Usuario </label>
                    </div>
                    <div class="col-auto">
                        <input type="text" id="usuarios" class="form-control" name="usuarios" placeholder="Usuario">
                    </div>
                </div> 
                <div class="row g-3 align-items-center">
                    <div class="col-auto">
                        <label for="password" class="col-form-label">Password</label>
                    </div>
                    <div class="col-auto">
                        <input type="password" id="password" class="form-control"
                            placeholder="ContraseÃ±a" name="password">
                    </div>
                </div>

                <button type="submit" class="btn btn-dark" style="margin: 10px 0;">
                    Enviar
                </button>

            </form>
            {{#if error}}
                <p>Usuario o Clave incorrecta!</p>
            {{/if}}
        </div>
    </div>

</div>